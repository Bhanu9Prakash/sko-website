
<%= simple_form_for(@review) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>



  <div class="form-inputs">
    <%= f.input :review_type, 
          input_html: {  }, 
          prompt: "-- SELECT ONE --", 
          collection: %w{Visit School Meet}, 
          label: "Review type", 
          required: true %>
    
    <%= f.input :date %>
    <%= f.label :volunteers_present %>
    <%= f.rich_text_area :volunteers_present, as: :rich_text_area, data: { controller: "mentions", target: "mentions.field" } %>
    <%= f.label :description %>
    <%= f.rich_text_area :description, as: :rich_text_area, data: { controller: "mentions", target: "mentions.field" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
  <br>
  <br>
<% end %>
