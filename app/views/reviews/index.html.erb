<p id="notice"><%= notice %></p>

<div class = "container">
  <h1>Reviews</h1>

  <%= search_form_for @q do |f| %>
    <%= f.label :review_type_cont %>
    <%= f.select :review_type_cont, 
          ['Visit', 'School', 'Meet'] %>
    <%= f.submit %>
  <% end %>


<table>
  <thead>
    <tr>
      <th>Review type</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.review_type %></td>
        <td><%= review.date %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
  
</div>
