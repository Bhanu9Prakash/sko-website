<br/>
<br/>

<% if notice %>
      <%= render 'layouts/alerts' %>
<% end %>
<br/>
<br/>
<div class = "container">
  
<div class="card">
  <div class="card-body">
    <h2 class='content-heading d-flex justify-content-between mb-4'>
      <span>Projects</span>
      <%= link_to 'New Project', new_project_path, class: 'btn btn-outline-dark' %>
    </h2>

    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none' do %>
        <div class="card project-card mb-3">
          <div class="card-body">
            <div class="mb-3">
              <span class='text-dark'>
                <small>
                  <%= project.percent_complete %>% complete
                  (<%= project.total_complete %>/<%= project.total_tasks %> tasks)
                </small>
              </span>
            </div>
            <h5 class='card-title text-dark'><b><%= project.name %></b></h5>
            <p class='text-secondary'><%= project.description %></p>
            <br/>
              <div class="btn-group">
                <% if current_user == project.user %>
                  <%= link_to 'Edit', edit_project_path(project), class:"btn btn-sm btn-outline-secondary" %>
                <% end %>
                <% if current_user == project.user %>
                  <%= link_to 'Destroy', project, class: "btn btn-sm btn-outline-danger" ,method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </div>
                
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
</div>