<br/>

<% if notice %>
      <%= render 'layouts/alerts' %>
<% end %>

<br/>
<br/>

<div class = "container">
  
<h1 class = "display-4">Houses</h1>

<table class = "table table-light">
  <thead class = "thead-dark">
    <tr>
      <th>House number</th>
      <th>Head</th>
      <th>Contact number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.house_number %></td>
        <td><%= house.head %></td>
        <td><%= house.contact_number %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_house_path, class: "btn btn-outline-dark" %>
</div>