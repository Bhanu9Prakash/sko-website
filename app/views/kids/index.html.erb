<% if notice %>
      <%= render 'layouts/alerts' %>
<% end %>

<br/>
<br/>


<div class = "container">
  
<h1 class = "display-4">Kids</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :name_or_school_cont %>
  <%= f.search_field :name_or_school_cont %>
  <%= f.submit %>
<% end %>
<br/>
<table class = "table">
  <thead class = "thead-dark">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Current standard</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kids.each do |kid| %>
      <tr>
        <td><%= kid.name %></td>
        <td><%= kid.age %></td>
        <td><%= kid.current_standard %></td>
        <td><%= kid.school %></td>
        <td><%= link_to 'Show', kid %></td>
        <td><%= link_to 'Edit', edit_kid_path(kid) %></td>
        <td><%= link_to 'Destroy', kid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kid', new_kid_path, class: "btn btn-outline-dark" %>

</div>